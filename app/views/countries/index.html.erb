<% @page_title = "国一覧" %>

<h1><%= @page_title %></h1>

<%= form_tag :search_countries, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<% if @countries.present? %>
<table class="list">
  <tr>
    <th>ID.</th>
    <th>国名</th>
  </tr>
  <% @countries.each do |country| %>
  <tr>
    <td align="right"><%= country.id %></td>
    <td><%= link_to country.name, country %></td>
  </tr>
  <% end %>
</table>
<% else %>
<p>国情報がありません。</p>
<% end %>
<br><br><br>

<section class="back">
   <a href="">
   <i class="fa fa-arrow-circle-left " aria-hidden="true"></i>
   <%= menu_link_to "TOPに戻る", :root %>
   </a>
</section>
