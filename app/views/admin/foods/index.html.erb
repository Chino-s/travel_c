<% @page_title = "料理一覧" %>

<h1><%= @page_title %></h1>

<p><%= link_to "料理の新規登録", :new_admin_food %></p>

<table class="list2">
  <tr>
    <th>ID.</th>
    <th>料理名</th>
    <th>修正</th>
  </tr>

  <% @foods.each do |food| %>
  <tr>
    <td align="right"><%= food.id %></td>
    <td><%= link_to food.name, admin_food_path(food.id) %></td>
    <td style="display:inline-flex">
      <%= link_to "詳細", admin_food_path(food.id) %>
      &ensp;|&ensp;
      <%= link_to "編集", edit_admin_food_path(food.id) %>
      &ensp;|&ensp;
      <%= link_to "削除", [:admin, food], method: :delete,
          confirm: "本当に削除しますか?" %>
    </td>
  </tr>
  <% end %>

</table>

<br><br><br>
