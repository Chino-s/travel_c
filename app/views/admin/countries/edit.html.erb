<% @page_title = "国情報の編集" %>

<h1><%= @page_title %></h1>

<%= form_for([:admin,@country]) do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
<br>
      <div class="field">
        <%= f.label :capital %><br>
        <%= f.text_field :capital %>
      </div>
<br>
      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>

<p><%= link_to "国の詳細に戻る", admin_country_path(@country) %></p>
